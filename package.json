{
    "name": "csharp-api-console",
    "displayName": "C# API Console",
    "description": "⚡ Lightweight API testing + one-click debug for ASP.NET Core. Test endpoints instantly with CodeLens, no tool switching.",
    "version": "1.0.13",
    "publisher": "dankit",
    "icon": "resources/icons/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/wjire/csharp-api-console"
    },
    "bugs": {
        "url": "https://github.com/wjire/csharp-api-console/issues"
    },
    "homepage": "https://github.com/wjire/csharp-api-console#readme",
    "license": "MIT",
    "keywords": [
        "api",
        "api testing",
        "api client",
        "rest",
        "rest api",
        "restful",
        "http",
        "http client",
        "csharp",
        "c#",
        "aspnet",
        "aspnet core",
        "asp.net",
        "dotnet",
        ".net",
        "controller",
        "endpoint",
        "web api",
        "codelens",
        "testing",
        "debug",
        "debugger",
        "postman",
        "insomnia",
        "route",
        "routes",
        "api explorer"
    ],
    "galleryBanner": {
        "color": "#007ACC",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Testing",
        "Debuggers"
    ],
    "activationEvents": [
        "onLanguage:csharp",
        "onCommand:csharpApiConsole.testEndpoint"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "csharpApiConsole.testEndpoint",
                "title": "⚡ Test Endpoint"
            }
        ],
        "configuration": {
            "title": "C# API Console",
            "properties": {
                "csharpApiConsole.codeLensDebounceDelay": {
                    "type": "number",
                    "default": 300,
                    "minimum": 0,
                    "maximum": 1000,
                    "description": "CodeLens scanning debounce delay in milliseconds. Prevents excessive rescanning when typing quickly. (0 = no debounce) | CodeLens 扫描防抖延迟（毫秒），避免输入时频繁扫描。（0 = 禁用防抖）"
                },
                "csharpApiConsole.defaultApiVersion": {
                    "type": "string",
                    "default": "1.0",
                    "description": "Default API version when controller has no [ApiVersion] attribute. Set to empty string to keep placeholder unreplaced. | 控制器无 [ApiVersion] 特性时的默认版本。留空则不替换占位符。"
                },
                "csharpApiConsole.requestHistoryLimit": {
                    "type": "number",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 20,
                    "description": "Max request history items kept per endpoint. | 每个接口保留的历史请求条数上限。"
                },
                "csharpApiConsole.requestTimeoutSeconds": {
                    "type": "number",
                    "default": 30,
                    "description": "HTTP request timeout in seconds. | HTTP 请求超时时间（秒）。"
                },
                "csharpApiConsole.largeResponseThresholdKb": {
                    "type": "number",
                    "default": 1024,
                    "description": "Large response rendering threshold in KB. Responses above this value use plain-text fallback rendering. | 大响应降级渲染阈值（KB）。超过该值将使用纯文本降级渲染。"
                },
                "csharpApiConsole.maxResponseLineNumbers": {
                    "type": "number",
                    "default": 2000,
                    "description": "Maximum response line numbers rendered in the UI. | UI 中最多渲染的响应行号数量。"
                },
                "csharpApiConsole.requestHistoryMaxBodyKb": {
                    "type": "number",
                    "default": 32,
                    "description": "Maximum request body size in KB to persist in request history. Bodies larger than this are stored as empty. | 请求历史中可保存的 Body 最大大小（KB），超过后将保存为空。"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3",
        "@vscode/test-electron": "^2.3.8"
    }
}